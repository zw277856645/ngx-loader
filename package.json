{
  "name": "@demacia/ngx-loader",
  "version": "0.0.2",
  "description": "Flexible angular loading pluginï¼Œwidth load awesome built-in",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "publish": "npm publish dist --access public",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "docs": "npm run docs:build -- -w -s -o",
    "docs:build": "compodoc src -c compodoc.json --language=zh-CN",
    "demo": "webpack-dev-server --config demo/config/webpack.dev.js --progress --open --profile --watch",
    "demo:build": "webpack --config demo/config/webpack.prod.js --progress"
  },
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts",
      "cssUrl": "inline"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/zw277856645/ngx-loader"
  },
  "keywords": [
    "angular",
    "loading",
    "loader",
    "load awesome"
  ],
  "author": "wei.zhang",
  "license": "MIT",
  "peerDependencies": {
    "@angular/common": "^8.1.2",
    "@angular/core": "^8.1.2",
    "zone.js": "^0.9.1",
    "rxjs": "^6.5.1",
    "@demacia/cmjs-lib": "~0.0.11"
  },
  "devDependencies": {
    "@angular/common": "8.1.2",
    "@angular/core": "8.1.2",
    "@angular/platform-browser": "8.1.2",
    "@angular/platform-browser-dynamic": "8.1.2",
    "@angular/compiler-cli": "8.1.2",
    "@angular/compiler": "8.1.2",
    "@demacia/cmjs-lib": "0.0.11",
    "@types/node": "10.14.5",
    "@compodoc/compodoc": "1.1.11",
    "zone.js": "0.9.1",
    "rxjs": "6.5.1",
    "angular-router-loader": "0.8.5",
    "angular2-template-loader": "0.6.2",
    "ts-loader": "5.4.4",
    "ng-packagr": "5.1.0",
    "ajv": "6.9.1",
    "rimraf": "2.6.1",
    "rxjs-tslint": "0.1.7",
    "tslint": "5.11.0",
    "codelyzer": "5.1.0",
    "typescript": "3.4.5",
    "webpack": "4.19.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.4"
  }
}
